<div class="jumbotron">
<h1 class="display-3">Waiting List</h1>
<hr class="my-4">
<table class="table" id="waiting-list-table">
  <thead>
    <tr>
      <th scope="col">Position</th>
      <th scope="col">Patient ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Risk</th>
    </tr>
  </thead>
  <tbody>
    {{#each list}}
    <tr>
      <td scope="row">{{@index}}</td>
      <td>{{this.pid}}</td>
      <td>{{this.fname}}</td>
      <td>{{this.lname}}</td>
      <td>{{this.priority}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

<h4 class="display-6">Remove Top-most Patient</h4>
<button id="delButton" class="btn btn-primary">Pop Patient</button>
<br>
<br>

<h4 class="display-6">Edit Priority:</h4>
<form>
  <div class="form-row">
    <div class="form-group col-md-4">
      Patient ID &nbsp;
      <input type="number" min="0" step="1" name="pid" id="pid"><br>
    </div>
    <div class="form-group col-md-4">
      New Priority &nbsp;
      <input type="number" min="1" step="1" value ="1" name="priority" id="priority"><br>
    </div>
  </div>
  <button id="editButton" class="btn btn-primary">Edit</button>
</form>

</br>
<div class="form-row">
    <div id="form-error"></div>
</div>
</div>

