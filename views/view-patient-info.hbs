<!-- Present content with Jumbotron -->
<div class="jumbotron">
<h1 class="display-3">Current Patient Information</h1>
<hr class="my-4">

<!-- Begin Form, split form into two sides, left and right -->
<form action="/edit-patient-info" method="post">
{{#if patientId}}
  <div class="form-group row">
  <!-- Left Side -->
  <div class="form-group col-lg-6">
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="first_name">First Name</label>
      <input type="text" readonly class="form-control p-1 mb-1 bg-light rounded border border-secondary text-dark" id="first_name" value="{{first_name}}">
    </div>
    <div class="form-group col-md-4">
      <label for="middle_name">Middle Name</label>
      <input type="text" readonly class="form-control p-1 mb-1 bg-light rounded border border-secondary text-dark" id="middle_name" value="{{middle_name}}">
    </div>
    <div class="form-group col-md-4">
      <label for="first_name">Last Name</label>
      <input type="text" readonly class="form-control p-1 mb-1 bg-light rounded border border-secondary text-dark" id="last_name" value="{{last_name}}">
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <label for="address">Address</label>
      <input type="text" readonly class="form-control p-1 mb-1 bg-light rounded border border-secondary text-dark" id="address" value="{{address}}">
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="city">City</label>
      <input type="text" readonly class="form-control p-1 mb-1 bg-light rounded border border-secondary text-dark" id="city" value="{{city}}">
    </div>
    <div class="form-group col-md-4">
      <label for="state">State</label>
      <input type="text" readonly class="form-control p-1 mb-1 bg-light rounded border border-secondary text-dark" id="state" value="{{state}}">
    </div>
    <div class="form-group col-md-2">
      <label for="zipcode">Zipcode</label>
      <input type="text" readonly class="form-control p-1 mb-1 bg-light rounded border border-secondary text-dark" id="zipcode" value="{{zipcode}}">
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="phone_number">Phone Number</label>
      <input type="text" readonly class="form-control p-1 mb-1 bg-light rounded border border-secondary text-dark" id="phone_number" value="{{phone_number}}">
    </div>
    <div class="form-group col-md-6">
      <label for="ssn">Social Security Number</label>
      <input type="text" readonly class="form-control p-1 mb-1 bg-light rounded border border-secondary text-dark" id="ssn" value="{{ssn}}">
    </div>
  </div>
  </div>

  <!-- Right side -->
  <div class="form-group col-lg-6">
    <div class="form-group col-md-12">
    <label for="symptoms">Symptoms</label>
    <textarea type="text" readonly class="form-control p-1 mb-1 bg-light rounded border border-secondary text-dark" rows="12" id="symptoms">{{symptoms}}</textarea>
  </div>
  </div>

  </div>

  <!-- Continue or Edit buttons -->
  <button type="submit" class="btn btn-primary">Edit</button>
  <a href="/connecting-device" class="btn btn-primary" id="continue">Continue</a>
{{/if}}
</form>
</div>
